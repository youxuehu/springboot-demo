<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="demoTaskService" class="org.example.db.service.demotask.impl.DemoTaskServiceImpl">
        <property name="demoTaskMapper" ref="demoTaskMapper"/>
    </bean>
    <bean id="bizLockService" class="org.example.db.service.bizlock.impl.BizLockServiceImpl">
        <property name="bizLockMapper" ref="bizLockMapper"/>
    </bean>
    <bean id="mySqlLock" class="org.example.lock.mysql.MySqlLock">
        <property name="bizLockService" ref="bizLockService"/>
    </bean>
    <bean id="testMySqlLock" class="org.example.lock.mysql.TestMySqlLock">
        <property name="mySqlLock" ref="mySqlLock"/>
    </bean>


    <bean id="jedisLockService" class="org.example.lock.redis.JedisLockServiceImpl">
        <property name="host" value="127.0.0.1"/>
        <property name="port" value="6379"/>
        <property name="lockTimeOut" value="600"/>
        <property name="perSleep" value="600"/>
    </bean>
    <bean id="testRedisLock" class="org.example.lock.redis.TestRedisLock" init-method="init">
        <property name="lockService" ref="jedisLockService"/>
    </bean>

</beans>